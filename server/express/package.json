{
  "name": "api",
  "version": "1.0.0",
  "description": "API starter",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules ./src/index.ts",
    "lint": "eslint --ignore-path .gitignore .",
    "check:format": "prettier --ignore-path .gitignore --list-different \"src/**/*.+(ts|js|json)\"",
    "check:types": "tsc --project tsconfig.json --pretty --noEmit"
  },
  "author": "Mircea Staicu",
  "repository": {
    "type": "git",
    "url": "git://github.com/mstaicu/aperitif.git"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-json-validator-middleware": "^2.1.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^1.4.1",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "2.8.8",
    "@types/express": "^4.17.9",
    "@types/json-schema": "^7.0.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  }
}
